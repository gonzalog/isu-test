var reservationsApp = angular.module('reservationsApp', [
  'ngRoute',
  'ngMaterial',
  'ngQuill',
  'md.time.picker',
  'reservationsControllers',
  'reservationsServices',
  'reservationsDirectives'
]);

reservationsApp.config(['$routeProvider',
  function($routeProvider) {
    $routeProvider
      .when('/reservations', {
        templateUrl: "<%= path_to_asset('reservations.html') %>",
        controller: 'ReservationsController'
      })
      .when('/new_reservation', {
        templateUrl: "<%= path_to_asset('edit_reservation.html') %>",
        controller: 'NewReservationController'
      })
      .when('/reservation/:id', {
        templateUrl: "<%= path_to_asset('edit_reservation.html') %>",
        controller: 'EditReservationController'
      })
      .when('/contact/:contact_id', {
        templateUrl: "<%= path_to_asset('edit_contact.html') %>",
        controller: 'EditContactController'
      })
      .otherwise({
        redirectTo: '/reservations'
      });
  }]);
